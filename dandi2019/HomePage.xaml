        <Button x:Name="btn_goto_diary1" Content="    운동일기" HorizontalAlignment="Left" Height="139" Margin="434,263,0,0" VerticalAlignment="Top" Width="288" Click="btn_goto_diary1_Click" Style="{StaticResource RoundButtonTemplate}" FontSize="40" FontFamily="12LotteMartDreamMedium"/>
        <Button x:Name="btn_goto_login1" Content="로그인으로 돌아가기" HorizontalAlignment="Left" Height="91" Margin="307,596,0,0" VerticalAlignment="Top" Width="251" Click="btn_goto_login1_Click" Style="{StaticResource RoundButtonTemplate}" FontSize="25" FontFamily="12LotteMartDreamMedium"/>
        <Button x:Name="btn_goto_home1" Content="        홈" HorizontalAlignment="Left" Height="91" Margin="100,596,0,0" VerticalAlignment="Top" Width="182" Click="btn_goto_home1_Click" Style="{StaticResource RoundButtonTemplate}" FontSize="25" FontFamily="12LotteMartDreamMedium"/>
        <Image Source="resources/yoga.png" Margin="107,282,1325,407"></Image>
